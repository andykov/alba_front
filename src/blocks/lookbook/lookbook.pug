mixin sliderItem(titleFirstPart, titleSecondPart, subtitle, link)
	a(href="#lookbook").slider-lookbook__item
		.slider-lookbook__description
			.slider-lookbook__title
				span!= titleFirstPart
				span!= titleSecondPart
			.slider-lookbook__subtitle!= subtitle
		figure.slider-lookbook__img
			img(src=link)