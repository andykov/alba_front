mixin product(pathImg, title, badgeNew, badgeSale, badgeWinter, hover)
	.product(class=className)
		a(href="").product__gallery
			.brazzers
				img(src="https://www.the-alba.com/upload/resize_cache/iblock/615/1000_1000_1/1103048201311_2-min.jpg")
				img(src="https://www.the-alba.com/upload/resize_cache/iblock/0b3/1000_1000_1/1103048201311_3-min.jpg")
				img(src="https://www.the-alba.com/upload/resize_cache/iblock/a3c/1000_1000_1/1103048201311_4-min.jpg")
			if (badgeNew || badgeSale || badgeWinter)
				.product__badges
					if (badgeNew)
						span.badge.badge--new new
					if (badgeSale)
						span.badge.badge--sale %
					if (badgeWinter)
						span.badge.badge--winter

			button(type="button").product__view.btn-icon.btn-icon--black.btn-icon--large
				span.icon-svg
