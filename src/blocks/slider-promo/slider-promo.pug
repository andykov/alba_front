mixin slider-promo()
	.slider-promo
		.slider-promo__header
			h2.slider-promo__title Акции
			.slider-promo__nav
				+btnSliderPrev().js-arrow-promo-prev
				+btnSliderNext().js-arrow-promo-next
		.slider-promo__big.js-slider-big
			.slider-promo__big-item.active
				.slider-promo__img
					img(src="img/content/slider-promo-img.jpg")

				.slider-promo__cont
			.slider-promo__big-item
					.slider-promo__img
						img(src="img/content/slider-promo-img.jpg")

					.slider-promo__cont
			.slider-promo__big-item
				.slider-promo__img
					img(src="https://picsum.photos/632/632?image=1073")
				.slider-promo__cont
			.slider-promo__big-item
				.slider-promo__img
					img(src="https://picsum.photos/632/632?image=1073")

				.slider-promo__cont
		.slider-promo__thumb.js-slider-big-nav
			.slider-promo__thumb-item
				img(src="https://picsum.photos/632/632?image=1082")
			.slider-promo__thumb-item
				img(src="https://picsum.photos/632/632?image=1080")
			.slider-promo__thumb-item
				img(src="https://picsum.photos/632/632?image=1078")
			.slider-promo__thumb-item
				img(src="https://picsum.photos/632/632?image=1073")
