extends templates/main

block title
	title  Личный кабинет | Данные

block css_libs
	link(rel="stylesheet" href="css/libs/datepicker.min.css")

block content
	h1.content__title Личный кабинет
	.container
		.row
			.col-12.col-xl-3.col-xxl-3
				+sidenav()

			.col-12.col-xl-9.col-xxl-12.office-card-wrap.office-card-wrap--editable
				.office-card
					.office-card__title
						h2.h1 Мои данные
						p Ваши личные данные надежно хранятся и будут автоматически заполнятся в форме оформления заказа

					.office-card__content
						+office-data()

block js_libs
	script(src="js/libs/datepicker.min.js")